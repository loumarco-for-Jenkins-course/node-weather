// Pipeline lab end of chapter 3
pipeline {
    agent any
    stages {
        stage('pull-from-github-build') {
            steps {
                bat "npm install"
            }
			post {
				failure {
					echo "I failed to build (sob)"
				}
			}
        }
        stage('execute-unit-tests') {
            steps{
               bat "npm test"
            }
        }
        stage('run-program') {
            steps{
               bat "node index.js -c Houston"  
            }
        }
    }
    post { 
        always { 
           bat "npm run cleanup"
        }
    }
}