// Pipeline lab end of chapter 3
pipeline {
    agent any
    stages {
        stage('pull-from-github-build') {
            steps {
                bat "npm install"
            }
			post {
				failure {
					echo "I failed (sob)"
				}
			}
        }
        stage('execute-unit-tests') {
            steps{
               bat "npm test"
            }
        }
    }
    post { 
        always { 
           bat "npm cleanup"
        }
    }
}